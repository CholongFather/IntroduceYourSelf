@page "/me/contact"

<PageTitle>Contact</PageTitle>
<MudPaper Class="pa">
	<MudText Align="Align.Center" Class="my-4" Typo="Typo.h3">Contact</MudText>
	<MudText Align="Align.Center"><MudChip Color="Color.Warning">Get In Touch</MudChip></MudText>
	<MudGrid  Class="justify-center">
		<MudItem xs=3>
			<MudImage Src="https://usagi-post.com/wp-content/uploads/2020/05/no-image-found-360x250-1-300x208.png" Alt="Not Me!" Class="rounded-lg ma-4" />
		</MudItem>
		<MudItem xs=4>
			<MudStack Row=true>
				<MudTextField @bind-Value="_name" Label="이름" Variant="Variant.Outlined"></MudTextField>
				<MudTextField @bind-Value="_email" Label="이메일" Variant="Variant.Outlined"></MudTextField>
			</MudStack>
				<MudTextField Class="my-2" @bind-Value="_contact" Label="용무" Lines="6" Variant="Variant.Outlined"></MudTextField>
				<MudButton StartIcon="@Icons.Material.Filled.Send">저장</MudButton>
		</MudItem>
	</MudGrid>
</MudPaper>