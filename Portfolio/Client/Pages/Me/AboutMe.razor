@page "/me/about"

<PageTitle>About Me</PageTitle>

	<MudPaper Class="pa">
		<MudGrid Justify="Justify.Center">
			<MudItem xs=12>
				<MudText Align="Align.Center" Class="my-4" Typo="Typo.h3">About me</MudText>
			</MudItem>
			<MudItem xs=12>
				<MudText Align="Align.Center"><MudChip Color="Color.Primary">나는 누구?</MudChip></MudText>
			</MudItem>
			@if (_isLoading)
			{
				<MudItem>
					<MudProgressCircular Indeterminate="true"></MudProgressCircular>
				</MudItem>
			}
			else
			{
				<MudItem xs=3>
				@if (!string.IsNullOrWhiteSpace(_aboutMeInfo.Image))
				{
					<MudImage Src="@_aboutMeInfo.Image" Alt="Me!" Class="rounded-lg ma-4" />
				}
				else
				{
					<MudImage Src="https://usagi-post.com/wp-content/uploads/2020/05/no-image-found-360x250-1-300x208.png" Alt="Not Me!" Class="rounded-lg ma-4" />
				}
				</MudItem>

				<MudItem xs=3>
				@if (!string.IsNullOrWhiteSpace(_aboutMeInfo.Title) || !string.IsNullOrWhiteSpace(_aboutMeInfo.Body))
				{
					<MudStack>
						<MudText Align="Align.Center" Class="my-4" Color="Color.Dark" Typo="Typo.h5">@_aboutMeInfo.Title</MudText>
						<MudTextField @bind-Value="_aboutMeInfo.Body" Label="소개" Variant="Variant.Outlined" ReadOnly="true"></MudTextField>
					</MudStack>
				}
				else
				{
					<MudText Align="Align.Center" Class="my-4" Typo="Typo.h5">데이터가 없습니다.</MudText>
				}
				</MudItem>
			}
		</MudGrid>
	</MudPaper>