@page "/me/service"

<PageTitle>Service</PageTitle>
<MudPaper Class="pa">
	<MudText Class="my-4" Align="Align.Center" Typo="Typo.h3">Service</MudText>
	<MudText Align="Align.Center"><MudChip Color="Color.Secondary">나는 어떤일을 하나?</MudChip></MudText>
	<MudStack Class="my-4" Row="true">
	@if (_isLoading)
	{
		<MudPaper>
			<MudProgressCircular Indeterminate="true"></MudProgressCircular>
		</MudPaper>
	}
	else
	{
		@foreach (var serviceInfo in _serviceInfos)
		{
			<MudPaper Class="ma-4">
				<MudStack AlignItems="AlignItems.Center">
					<MudIcon Icon="@Icons.Filled.DeveloperMode" />
					<MudText>@serviceInfo.Title</MudText>
					<MudText>@serviceInfo.Body</MudText>
				</MudStack>
			</MudPaper>
		}
	}
	</MudStack>
</MudPaper>