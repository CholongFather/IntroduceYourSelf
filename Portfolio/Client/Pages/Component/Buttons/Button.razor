@page "/component/button"

<PageTitle>Button</PageTitle>

<MudPaper Class="pa-4" Elevation="25">
	<MudText Typo="Typo.h4" Class="my-1">Rendering</MudText>
	<MudButton Class="ma-1" Variant="@_variant" StartIcon="@Icons.Material.Filled.Delete" Size="@_size" FullWidth="@_fullWidth" Disabled="@_disable">Default</MudButton>
	<MudButton Class="ma-1" Variant="@_variant" EndIcon="@Icons.Material.Filled.Send" Size="@_size" FullWidth="@_fullWidth" Color="Color.Primary" Disabled="@_disable">Primary</MudButton>
	<MudButton Class="ma-1" Variant="@_variant" FullWidth="@_fullWidth" Size="@_size" Color="Color.Secondary" Disabled="@_disable">Secondary</MudButton>
	<MudButton Class="ma-1" Variant="@_variant" Color="Color.Warning" FullWidth="@_fullWidth" Size="@_size"  Disabled="@_disable">Disabled</MudButton>
	<MudButton Class="ma-1" Href="https://github.com" Color="Color.Tertiary" Variant="@_variant" EndIcon="@Icons.Custom.Brands.GitHub" FullWidth="@_fullWidth" Size="@_size" Disabled="@_disable">Github Link</MudButton>
</MudPaper>

<MudPaper Class="pa-4 my-4" Elevation="25">
	<MudText Typo="Typo.h4" Class="my-2">Control</MudText>
	<MudCheckBox @bind-Checked="_fullWidth" Label="Full Width" Color="Color.Primary"></MudCheckBox>
	<MudSwitch Color="Color.Primary" @bind-Checked=@_disable Label="Disable" Class="ma-1" />
	<MudSelect Class="my-1" @bind-Value="_size" Variant="Variant.Outlined" Label="크기">
		<MudSelectItem Value="Size.Small">Small</MudSelectItem>
		<MudSelectItem Value="Size.Medium">Medium</MudSelectItem>
		<MudSelectItem Value="Size.Large">Large</MudSelectItem>
	</MudSelect>
	<MudSelect Class="my-1" @bind-Value="_variant" Variant="Variant.Outlined" Label="형태">
		<MudSelectItem Value="Variant.Filled">Filled</MudSelectItem>
		<MudSelectItem Value="Variant.Outlined">Outlined</MudSelectItem>
		<MudSelectItem Value="Variant.Text">Text</MudSelectItem>
	</MudSelect>
</MudPaper>