@page "/component/badge"

<PageTitle>Badge</PageTitle>

<MudPaper Class="pa-4" Elevation="25">
	<MudText Typo="Typo.h4" >Rendering</MudText>
	<MudGrid>
		<MudItem md="3">
			<MudPaper Class="pa-4" Elevation="0">
				<MudText Typo="Typo.h6" GutterBottom="true"></MudText>
				<MudSelect T="string" Label="컴포넌트" Margin="Margin.Dense" Dense="true" Value="@_selectedTestComponent" ValueChanged="OnSelectedTestComponent">
					<MudSelectItem T="string" Value="@("Icon")">아이콘</MudSelectItem>
					<MudSelectItem T="string" Value="@("Button")">버튼</MudSelectItem>
					<MudSelectItem T="string" Value="@("IconButton")">아이콘 버튼</MudSelectItem>
					<MudSelectItem T="string" Value="@("Text")">텍스트</MudSelectItem>
					<MudSelectItem T="string" Value="@("Avatar")">아바타</MudSelectItem>
					<MudSelectItem T="string" Value="@("Chip")">칩</MudSelectItem>
				</MudSelect>
			</MudPaper>
		</MudItem>
		<MudItem md="6" Class="d-flex align-center justify-center my-auto">
			<MudBadge Origin="@_origin" Content="@_badgeContent" Color="Color.Primary" Overlap="@_isOverlap" Dot="@_isDot" Bordered="@_isBordered" Icon="@_badgeIcon">
				@if (_selectedTestComponent == "Icon")
				{
					<MudIcon Icon="@Icons.Custom.Brands.StackOverflow" Color="Color.Default" Size="Size.Large" />
				}
				else if (_selectedTestComponent == "Button")
				{
					<MudButton Color="Color.Primary" Variant="Variant.Filled">MudButton</MudButton>
				}
				else if (_selectedTestComponent == "IconButton")
				{
					<MudIconButton Icon="@Icons.Material.Filled.Email" Color="Color.Default" />
				}
				else if (_selectedTestComponent == "Text")
				{
					<MudText>텍스트</MudText>
				}
				else if(_selectedTestComponent == "Avatar")
				{
					<MudAvatar Size="Size.Large" Class="ma-2" >
						<MudIcon Icon="@Icons.Custom.Brands.GitHub"></MudIcon>
					</MudAvatar>
				}
				else if(_selectedTestComponent == "Chip")
				{
					<MudChip Label="true" Color="Color.Warning" Style="color:black;">뱃지 컴포넌트</MudChip>
				}
			</MudBadge>
		</MudItem>
		<MudItem md="3">
			<MudPaper Class="pa-4" Elevation="0">
				<MudText Typo="Typo.h6" GutterBottom="true">Control</MudText>
				<MudSelect Label="뱃지 위치" Margin="Margin.Dense" Dense="true" @bind-Value="@_origin">
					<MudSelectItem Value="Origin.TopLeft">상단 좌</MudSelectItem>
					<MudSelectItem Value="Origin.TopCenter">상단 중</MudSelectItem>
					<MudSelectItem Value="Origin.TopRight">상단 우</MudSelectItem>
					<MudSelectItem Value="Origin.CenterLeft">중단 좌</MudSelectItem>
					<MudSelectItem Value="Origin.CenterCenter">중단 중</MudSelectItem>
					<MudSelectItem Value="Origin.CenterRight">중단 우</MudSelectItem>
					<MudSelectItem Value="Origin.BottomLeft">하단 좌</MudSelectItem>
					<MudSelectItem Value="Origin.BottomCenter">하단 중</MudSelectItem>
					<MudSelectItem Value="Origin.BottomRight">하단 우</MudSelectItem>
				</MudSelect>
				<MudCheckBox @bind-Checked="@_isDot" Label="점" Color="Color.Primary" Style="width:100%;" />
				<MudCheckBox @bind-Checked="@_isOverlap" Label="오버랩" Color="Color.Primary" Style="width:100%;" />
				<MudCheckBox @bind-Checked="@_isBordered" Label="테두리" Color="Color.Primary" Style="width:100%;" />
				<MudCheckBox T="bool" CheckedChanged="AddIcon" Label="아이콘" Color="Color.Primary" Style="width:100%;" />
				<MudText Typo="Typo.subtitle2" Class="my-2">뱃지 내용</MudText>
				<div style="display: flex;">
					<MudButton OnClick="AddValue" Variant="Variant.Filled" Size="Size.Small" Color="Color.Primary" FullWidth="true" Class="mr-1">추가 @_addNumber</MudButton>
					<MudButton OnClick="ClearContent" Variant="Variant.Filled" Size="Size.Small" Color="Color.Secondary" FullWidth="true" Class="ml-1">초기화</MudButton>
				</div>
			</MudPaper>
		</MudItem>
	</MudGrid>
</MudPaper>