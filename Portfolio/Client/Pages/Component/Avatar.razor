@page "/component/avatar"

<PageTitle>Alert</PageTitle>

<MudPaper Class="pa-4" Elevation="25">
	<MudText Typo="Typo.h4" Class="my-2">Rendering</MudText>
	<MudAvatarGroup Max="@_max" Spacing="@_spacing" MaxColor="Color.Primary">
		<MudAvatar Color="Color.Default">
			<MudIcon Icon="@Icons.Material.Filled.Favorite" Size="Size.Large" />
		</MudAvatar>
		<MudAvatar>
			<MudIcon Color="Color.Primary" Icon="@Icons.Material.Filled.Api" Size="Size.Large" />
		</MudAvatar>
		<MudAvatar>
			<MudIcon Color="Color.Secondary" Icon="@Icons.Material.Filled.AddCircle" Size="Size.Large" />
		</MudAvatar>
		<MudAvatar>
			<MudIcon Color="Color.Success" Icon="@Icons.Material.Filled.ThumbUp" Size="Size.Large" />
		</MudAvatar>
		<MudAvatar>
			<MudIcon Color="Color.Info" Icon="fab fa-angellist" Size="Size.Large" />
		</MudAvatar>
		<MudAvatar Square="true" Color="Color.Warning">
			<MudIcon Icon="fas fa-dragon" Size="Size.Small" />
		</MudAvatar>
		<MudAvatar Color="Color.Error">
			<MudIcon Icon="fa-brands fa-blackberry" Size="Size.Medium" />
		</MudAvatar>
		<MudAvatar Color="Color.Dark">
			<MudIcon Icon="@Icons.Custom.Brands.GitHub" Size="Size.Large" />
		</MudAvatar>
	</MudAvatarGroup>
</MudPaper>

<MudPaper Class="pa-4 my-4" Elevation="25">
	<MudText Typo="Typo.h4" Class="my-2">Control</MudText>
	<MudGrid>
		<MudItem xs="12" sm="6">
			<MudSlider Min="0" Max="8" Step="0" @bind-Value="@_max" Color="Color.Info">표시 아바타 최대</MudSlider>
			<MudInput @bind-Value="@_max" ReadOnly="true"></MudInput>
		</MudItem>
		<MudItem xs="12" sm="6">
			<MudSlider Min="0" Max="16" Step="0" @bind-Value="@_spacing" Color="Color.Error">간격</MudSlider>
			<MudInput @bind-Value="@_spacing" ReadOnly="true"></MudInput>
		</MudItem>
	</MudGrid>
</MudPaper>